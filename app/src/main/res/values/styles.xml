<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_title_text_style">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/main_title_font_size</item>
    </style>
    <style name="header_text_style">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textColor">@color/black_87aph</item>
    </style>

    <style name="high_emphasis">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black_87aph</item>
        <item name="android:textSize">@dimen/body_font_size</item>
    </style>

    <style name="subtitle_text_style">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="font_button">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white_87aph</item>

    </style>

    <style name="caption_text_style">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/caption_font_size</item>
    </style>

</resources>